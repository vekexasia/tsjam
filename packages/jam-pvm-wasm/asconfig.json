{
  "targets": {
    "debug": {
      "outFile": "dist/asm/index.wasm",
      "textFile": "dist/asm/index.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "dist/asm/index.wasm",
      "textFile": "dist/asm/index.wat",
      "sourceMap": false,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": false,
      "noAssert": false
    }
  },
  "options": {
    "bindings": "raw",
    "enable": [
      "threads",
      "simd"
    ],
    "sharedMemory": true,
    "initialMemory": 1,
    "maximumMemory": 400,
    "exportRuntime": true
  }
}
