{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "preserveSymlinks": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*", 
  ],
  "exclude": [
    "dist/**/*"
  ]
}
