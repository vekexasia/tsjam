{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist",
    "target": "es2020",
    "preserveSymlinks": false,
    "noEmitOnError": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ]
}
