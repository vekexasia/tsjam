{
  "name": "tsjam",
  "packageManager": "yarn@4.5.0",
  "scripts": {
    "lint": "eslint --fix packages/*/src/**/*.ts",
    "test:tiny": "cross-env JAM_CONSTANTS=tiny NODE_OPTIONS='--max-old-space-size=16384' yarn vitest run",
    "profile:tiny": "cross-env PROFILER=true yarn test:tiny",
    "trace:tiny": "cross-env DEBUG_FS=true DEBUG_STEPS=true DEBUG_TRACES=true yarn test:tiny",
    "test:full": "cross-env JAM_CONSTANTS=full NODE_OPTIONS='--max-old-space-size=8192' yarn vitest run",
    "debugtest:tiny": "cross-env JAM_CONSTANTS=tiny yarn vitest run --inspect-brk=127.0.0.1:3000 --no-file-parallelism",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "build:one": "yarn workspace @tsjam/$0 build",
    "test:one": "yarn workspace @tsjam/$0 test",
    "linturbo": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.17.2",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@typescript/native-preview": "^7.0.0-dev.20250825.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "chai": "^5.3.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rollup": "^4.48.1",
    "rollup-plugin-ts-paths": "^1.0.5",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.6",
    "typedoc": "^0.27.9",
    "typescript": "5.7.2",
    "vitest": "^3.2.4",
    "webdriverio": "^9.19.2"
  },
  "dependencies": {
    "@vekexasia/bigint-math": "^1.0.0",
    "@vekexasia/bigint-uint8array": "^1.1.1",
    "bigint-buffer": "^1.1.5",
    "fs-extra": "^11.3.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
